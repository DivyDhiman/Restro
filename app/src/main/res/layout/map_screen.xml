<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/custom_tool_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    android:id="@+id/address_map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_round"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/margin_13"
                    android:layout_marginStart="@dimen/margin_13"
                    app:cardBackgroundColor="@android:color/transparent"
                    app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bottom_round"
                    android:orientation="vertical"
                    android:paddingEnd="@dimen/margin_13"
                    android:paddingStart="@dimen/margin_13">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_4"
                        android:layout_marginTop="@dimen/margin_11">

                        <TextView
                            android:id="@+id/header_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DIGGIN"
                            android:textColor="@color/open_now_txt_restro_details"
                            android:textSize="@dimen/margin_13" />

                        <TextView
                            android:id="@+id/distance_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="1.4 MI"
                            android:textColor="@color/open_now_txt_restro_details"
                            android:textSize="@dimen/margin_13" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/address_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_8"
                        android:text="New Delhi 110079"
                        android:textColor="@color/open_now_txt_restro_details"
                        android:textSize="@dimen/margin_13" />

                </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>